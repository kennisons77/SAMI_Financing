<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.email_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.email_field :last_name, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :lender_id %><br>
    <%= f.collection_select( :lender_id, Lender.all, :id, :title) %>
  </div>
  
  <div class="field">
    <%= f.label :admin %><br>
    <%= f.check_box( :admin) %>
  </div>
    
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
    
<% end %>


