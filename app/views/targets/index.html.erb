<h1>Listing targets<%= " for #{@borrower.title}" if @borrower%></h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Yield</th>
      <% unless @borrower%>
        <th>Borrower</th>
      <% end %>
      <th>Deal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @targets.each do |target| %>
      <tr>
        <td><%= target.amount %></td>
        <td><%= target.yield %></td>
        <% unless @borrower%>
          <td><%= target.borrower.title %></td>
        <% end %>
        <td><%= target.deal.title %></td>
        <td><%= link_to 'Show', target %></td>
        <td><%= link_to 'Edit', edit_target_path(target) %></td>
        <td><%= link_to 'Destroy', target, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

