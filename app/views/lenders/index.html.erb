<h1>Listing lenders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Account</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lenders.each do |lender| %>
      <tr>
        <td><%= lender.title %></td>
        <td><%= lender.account %></td>
        <td><%= lender.active %></td>
        <td><%= link_to 'Show', lender %></td>
        <td><%= link_to 'Edit', edit_lender_path(lender) %></td>
        <td><%= link_to 'Destroy', lender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lender', new_lender_path %>
